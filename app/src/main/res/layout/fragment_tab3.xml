<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="나의 스펙 통계"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:layout_marginHorizontal="50dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:gravity="bottom">

                <TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_gravity="center_vertical"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@color/chartColor1"
                            android:visibility="invisible"
                            android:id="@+id/chart_color1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/chart_legend1"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_gravity="center_vertical"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@color/chartColor2"
                            android:visibility="invisible"
                            android:id="@+id/chart_color2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/chart_legend2"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_gravity="center_vertical"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@color/chartColor3"
                            android:visibility="invisible"
                            android:id="@+id/chart_color3"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/chart_legend3"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_gravity="center_vertical"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@color/chartColor4"
                            android:visibility="invisible"
                            android:id="@+id/chart_color4"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/chart_legend4"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_gravity="center_vertical"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@color/chartColor5"
                            android:visibility="invisible"
                            android:id="@+id/chart_color5"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/chart_legend5"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_gravity="center_vertical"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@color/chartColor6"
                            android:visibility="invisible"
                            android:id="@+id/chart_color6"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/chart_legend6"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />

                    </LinearLayout>
                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>